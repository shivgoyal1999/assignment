pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        ECR_REPO   = "123456789012.dkr.ecr.us-east-1.amazonaws.com/polaris-api"
        CLUSTER    = "polaris-eks-cluster"
        CHART_PATH = "helm-charts/api-chart"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your-org/your-api.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t $ECR_REPO:$BUILD_NUMBER .'
                }
            }
        }

        stage('Login to ECR') {
            steps {
                script {
                    sh '''
                    aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin $ECR_REPO
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    sh 'docker push $ECR_REPO:$BUILD_NUMBER'
                }
            }
        }

        stage('Deploy with Helm') {
            steps {
                script {
                    sh '''
                    helm upgrade --install polaris-api $CHART_PATH \
                        --namespace default \
                        --set image.repository=$ECR_REPO \
                        --set image.tag=$BUILD_NUMBER \
                        --set ingress.host=api.polaris.com
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful. Access API via Kong at http://api.polaris.com"
        }
        failure {
            echo "❌ Deployment failed. Check Jenkins logs."
        }
    }
}
